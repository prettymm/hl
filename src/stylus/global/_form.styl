.l-padding-top-4
  margin-top -284px
.form
  &-change-icon
    @media $small
      display none
  &-change-hidden
    display none
    @media $small
      padding-top 5px
      display block
      margin auto
  &-control
    background $col-black
    border-radius(0px)
    border 1px solid $col-white
    padding 0px 15px
    font-size 1em
    height 2.5em
    margin-top 0em
    color $col-white
    &:focus
      border-color $col-white
      box-shadow(none)
  &-postal
    border none
    padding 0px
    border-bottom 1px solid $col-white
  &-group
    position relative
    margin-bottom 20px
    &--margin-top-20
      @media $medium-min
        margin-top 20px
    label
      cursor text
      transition .2s ease-out
      color $col-white
      top 0.2em
      left 1em
      line-height initial
      padding-bottom 7px
      padding-top 10px
      &.active
        color $col-orange
        -webkit-transform translateY(-154%)
        transform translateY(-154%)
        left 0
      &-label-item
        display relative
        left 5.1em
    textarea
      min-height 0px
      padding 10px 0px
      font-size 2.0em
      line-height 45px
      @media $small
        text-align center
  &--note
    font-size .75em !important
    @media $medium-min
      font-size .5834em !important
  &__label
    &--filled
      @media $small
        display none
  &-code-mobile
    min-width 60px
  &-mobile
    &-label
      @media $medium-min
        left 30px!important
select
  &.form
    &-control
      background linear-gradient(45deg, transparent 50%, #fff 50%), linear-gradient(135deg, #fff 50%, transparent 50%), linear-gradient(to right, transparent, transparent)
      background-position calc(100% - 21px) calc(1em + 2px), calc(100% - 16px) calc(1em + 2px), 100% 0
      background-size 5px 5px, 5px 5px, 2.5em 2.5em
      background-repeat no-repeat
      line-height 1.5em
      padding 0.5em 3.5em 0.5em 1em
      border-radius 0
      -webkit-box-sizing border-box
      -moz-box-sizing border-box
      box-sizing border-box
      -webkit-appearance none
      -moz-appearance none
      option
        color $col-black
        background-color $col-white