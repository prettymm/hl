global-reset()

$col-black-body = #000

.clearfix
  clearfix()

.clear
  clear both
*
  margin 0
  padding 0
  box-sizing border-box

html, body
  height 100%

body
  position relative
  font-size 16px
  line-height 18px
  background $col-black-body


a
  &:hover, &:focus
    outline none
    color inherit
    text-decoration none