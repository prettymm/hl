
@import 'fonts/_*.styl'

font($name, $important = false)
  $style = "Arial"
  if $important
    $style = $style !important

  font-family $name, $style


font-fa()
  font-family 'FontAwesome'


$fontNames = "HDLetterpress-Reg" "HDLetterpress-Reg-Greek" "HDLetterpress-Reg-Cyrillic" "HDLetterpress-Reg-Latin-Extended" "TradeGothicW1G20" "tradegothic_boldcondtwenty20" "trade_gothic_lt_stdCnno18" "CheddarGothicSans" "CheddarGothicSans-Italic"
$classNames = "HDLetterpress-reg" "HDLetterpress-reg-greek" "HDLetterpress-reg-cyrillic" "HDLetterpress-reg-latin" "tradeGothicW1G20" "tradegothic-bold" "trade-stdCnno18" "cheddargothicsans" "cheddarcothicSans-italic"

for $name, $i in $fontNames
  .font--{$classNames[$i]}
    font($name, true)