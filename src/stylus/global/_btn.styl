
.ctaBtn
  color #000
  padding 12px 30px
  background-color $col-orange
  background-size 30px
  font-family 'tradegothic_boldcondtwenty20'
  cursor pointer
  border none
  &:after
    width 25px
    height 25px
    content ''
    background url('../images/form/btn-arrow-right.png') no-repeat right 5px
    background-size 25px
    position relative
    top 5px
    right -10px
    display inline-block
  &:hover
    span
      text-decoration none
      color $col-black

[type=submit]
  text-align left
  min-width 300px
  height 50px
  font-size 22px
  font-family 'tradegothic_boldcondtwenty20'
  color $col-black
  text-transform uppercase
  border 0
  margin-top 5px
  background $col-orange url(../images/form/btn-arrow-right.png) no-repeat 95% center
  padding 0 65px 0 27px





