.c-checkbox
  position relative
  margin-bottom 2em
  &.checkbox
    margin-top 2em
  label
    cursor pointer
    padding-left 40px
    span
      display block
      position absolute
      left 0
      transition-duration 0.3s
  &__box
    border 2px solid $col-white
    height 30px
    width 30px
    z-index 888
    transition-delay 0.2s
  &__check
    top  0px
    right  6px
    width  30px
    height  30px
    border 2px solid $col-white
    opacity 0
    z-index 888
    transform rotate(180deg)
    transition-delay(0.3s)

  &__inner-tick
    width 100%
    padding 2px

  input[type=checkbox]
    display none
    &:checked ~ label
      .c-checkbox__box
        opacity 0
        transform scale(0) rotate(-180deg)
      .c-checkbox__check
        opacity 1
        transform scale(1) rotate(90deg)
        right 0px
  p
    font-size 130%
    line-height 1.6em
    color $col-white
    font-family "trade_gothic_lt_stdCnno18"
  &-sign
    .text--uppercase
      font-size 120%
      line-height 1.8em

  label
    font-size 0.8333em