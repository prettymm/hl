.c-form
  margin 0 auto
  padding 0
  &__image
    width 100%
  &__dealer
    border-bottom  1px solid $col-white
    padding-bottom .8rem
    label
      font-size 105%
      line-height 80%
      &:nth-child(1)
        font-size 100%
        line-height 150%
  &__heading
    background url('../images/form/form-hero-desktop.jpg') no-repeat top
    min-height 752px
    background-size cover
    position relative
    overflow hidden
    z-index 10
    margin-bottom 3rem
    +bp(max , $screen-mobile-max)
      background url('../images/form/form-hero-mobile.jpg') no-repeat bottom
      min-height 852px
      z-index 10
      margin-bottom 3rem
    &--content
      position absolute
      top 70px
      margin 0 auto
      width 100%
      +bp(max , $screen-mobile-max)
        top 60px
      h2
        margin 2rem auto
        +bp(max , $screen-mobile-max)
          margin 1rem auto
      p
        width 50%
        margin 2rem auto
        +bp(max , $screen-mobile-max)
          width 90%
          margin-top  1rem
  &__downArrow
    text-align center
    position absolute
    bottom 50px
    width 100%
    a
      display inline-block
      img
        width 30px
  &__content
    width 65%
    max-width 800px
    margin 0em auto
    +bp(max , $mobile-max)
      width 85%
    h3
      letter-spacing 2px

  &__bike
    background-color $col-bg-grey
    +bp(max , $mobile-max)
      background-color $col-black
    &--option
      text-align left
      li
        display inline-block
        position relative
        cursor pointer
        &:nth-child(1)
          span
            color $col-white
        img
          width 100%
          height 100%
          vertical-align middle
        &.active
          outline 3px solid $col-orange
      &-desktop
        li
          width 28%
          &:nth-child(3n+1)
            margin 23px 0px
          &:nth-child(3n+2)
            margin 23px 7%
          &:nth-child(3n+3)
            margin 23px 0px
      &-mobile
        margin 1.5rem 0!important
        li
          margin 5px 20px 5px 3px
    ul
      margin 0
      padding 0
      list-style-type none
    &--title
      display block
      width 100%
      position absolute
      top 0
      left 0
      height 100%
      font-size 1.5rem
      color #000000
      font-family 'CheddarGothicSans'
      z-index 1
      padding-top 15px
      box-sizing border-box
      text-align center
      letter-spacing 1px
      +bp(max, $screen-tablet-max)
        font-size 1.2rem
      +bp(max, $mobile-max)
        font-size 1rem
      sup
        top -2px
  .form__label
    color $col-white
    padding-bottom 7px
    font-family 'tradegothic_boldcondtwenty20'
    letter-spacing 1px
    text-transform uppercase
    sub
      font-size 70%
      padding-left 1em
      bottom 0
  .form-group
    margin-bottom 20px
    input[type=text]
      background-color transparent
      border-radius 0px
      &:focus
        border-color $col-white
  .form-control
    font-size 1em
    height 2.5em
    margin-top 0
    color #fff
    border-radius 0px
  &-checked
    display none
    background-color $col-light-grey-4
    padding 1em 0
    margin-bottom 1em
    .c-form__location
    .c-form__location-select
    .c-form__location-time
      @media (min-width:320px)
        width 90%
        margin-left 5%
      @media $medium-min
        width 84%
        margin-left 8%
      @media (min-width:1400px)
        width 66%
        margin-left 17%
    .c-form__location-select
      margin-bottom 0
    .c-form__location
      @media (min-width:320px)
        margin-top 3em
  .form-mobile-code
    .text-danger
      margin-top 3.5em
      @media (min-width:320px)
        padding-left .9em
      @media $medium-min
        padding-left .7em


